{
  "name": "@dharpa-vre/vre",
  "version": "0.1.0",
  "description": "DHARPA VRE monorepo",
  "keywords": [
    "dharpa",
    "vre"
  ],
  "homepage": "https://dharpa.org",
  "license": "AGPL-3.0-only",
  "private": true,
  "workspaces": [
    "packages/*",
    "applications/*"
  ],
  "scripts": {
    "eslint:check": "eslint packages/*/src/ applications/*/src/ --ext .ts,.tsx,.js,.jsx ",
    "tsc:check": "tsc --noEmit",
