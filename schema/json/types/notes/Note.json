{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "title": "Note",
  "description": "Represents a step note.",
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique ID of the note."
    },
    "content": {
      "type": "string",
      "description": "Textual content of the note."
    },
    "title": {
      "type": "string",
      "description": "Optional title of the note"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the note was created"
    }
  },
  "required": [
    "id",
    "content",
    "createdAt"
  ]
}