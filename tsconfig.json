{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@dharpa-vre/*": ["packages/*/src", "applications/*/src"],
      "@lumy/*": ["packages/*/src"]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["packages", "applications", "tools"],
  "exclude": ["node_modules", "dist", "tools", "**/dist"]
}
